<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.compscipage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.example.compscipage.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.compscipage.CourseMenuActivity"
            android:label="@string/title_activity_course_menu" >
        </activity>
        <activity
            android:name="com.example.compscipage.StaffMenuActivity"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_staff_menu" >
        </activity>
        <activity
            android:name="com.example.compscipage.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name="com.example.compscipage.NewsMenuActivity"
            android:label="@string/title_activity_news_menu" >
        </activity>
        <activity
            android:name="com.example.compscipage.EventsActivity"
            android:label="@string/title_activity_events" >
        </activity>
        <activity
            android:name="com.example.compscipage.SeminarsActivity"
            android:label="@string/title_activity_seminars" >
        </activity>
    </application>

</manifest>
